<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:paddingTop="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/asc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:paddingRight="5dp"
        android:id="@+id/asc_img"
        android:src="@drawable/asc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        <TextView
            android:layout_toEndOf="@+id/asc_img"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#000000"
            android:text="SORT DATE ASCENDING"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/dsc"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/asc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:paddingRight="5dp"

            android:id="@+id/dsc_img"
            android:src="@drawable/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_toEndOf="@+id/dsc_img"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#000000"
            android:text="SORT DATE DESCENDING"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</RelativeLayout>